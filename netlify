[build]
  publish = "dist"          # Your build output folder
  command = "npm run build" # Build command

# SPA redirect to index.html
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200
  force = true                  # Ensures SPA routing works even on refresh

# Optional: Headers for caching and security
[[headers]]
  for = "/*"
  [headers.values]
    Cache-Control = "no-cache, no-store, must-revalidate"
    Pragma = "no-cache"
    Expires = "0"
